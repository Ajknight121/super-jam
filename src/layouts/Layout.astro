---
import "@fontsource/oswald";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>MakeMeet</title>
  </head>
  <body>
    <div class="site">
      <header class="site-header">
        <div class="container header-inner">
          <a class="brand" href="/">MakeMeet</a>
          <nav class="nav">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="/create-meeting">Create</a>
			<a class="nav-link" href="#">Sign in</a> <!-- Placeholder for future sign-in functionality -->
          </nav>
        </div>
      </header>

      <main class="site-main">
        <div class="container">
          <slot />
        </div>
      </main>

      <footer class="site-footer">
        <div class="container footer-inner">
          <div class="foot-left">{new Date().getFullYear()} MakeMeet</div>
          <div class="foot-right"><a href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer">MIT License</a></div>
        </div>
      </footer>
    </div>
  </body>

  <style>
    :root{
      /* Palette provided */
      --dark-900: #211A1D; /* primary text / dark */
      --accent-600: #6320EE; /* primary accent */
      --accent-400: #8075FF; /* soft accent */
      --bg-soft: #F8F0FB; /* light background */
      --muted-green: #CAD5CA; /* supporting */

      --container: 1100px;
      --radius: 12px;
      --gap: 16px;
      --font: 'Oswald', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;
    }

    html,body{
      margin:0;
      height:100%;
      font-family:var(--font);
      background: linear-gradient(180deg, var(--bg-soft) 0%, #ffffff 100%);
      color:var(--dark-900);
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }

    .container{max-width:var(--container);margin:0 auto;padding:20px;box-sizing:border-box}

    /* Header */
    .site-header{position:sticky;top:0;z-index:40;background:transparent;border-bottom:1px solid rgba(33,26,29,0.04);backdrop-filter:blur(6px)}
    .header-inner{display:flex;align-items:center;justify-content:space-between}
    .brand{font-size:20px;font-weight:700;color:var(--dark-900);text-decoration:none;padding:6px 10px;border-radius:8px}

    .nav{display:flex;gap:10px}
    .nav-link{color:var(--dark-900);text-decoration:none;padding:8px 10px;border-radius:8px;font-weight:600}
    .nav-link:hover{background:var(--accent-400);color:white}

    /* Main area */
    .site-main{padding:36px 0}

    /* Footer */
    .site-footer{padding:18px 0;border-top:1px solid rgba(33,26,29,0.04)}
    .footer-inner{display:flex;justify-content:space-between;align-items:center;gap:8px}
    .foot-right{color:#666;font-size:13px}

    /* Small card utility */
    .card{background:white;border-radius:var(--radius);padding:20px;box-shadow:0 10px 30px rgba(99,32,238,0.06)}

    /* Buttons */
    .btn{
		display:inline-block;
		padding:10px 14px;
		border-radius:8px;
		background:var(--accent-600);
		color:white;
		text-decoration:none;
		font-weight:700;
		font-family:var(--font);
	}
    .btn.secondary{background:var(--accent-400);color:var(--dark-900)}

    @media (max-width:720px){
      .container{padding:12px}
      .brand{font-size:18px}
      .site-main{padding:20px 0}
      .footer-inner{flex-direction:column;align-items:flex-start}
    }
  </style>
</html>